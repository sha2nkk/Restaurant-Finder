<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="vm" type="com.shashankk.vm.RestaurantItemVm"/>
    </data>

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="8dp">

            <TextView
                    android:id="@+id/name"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintBottom_toTopOf="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Central Park Restaurant"
                    android:text="@{vm.restaurant.name}"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnHate"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:id="@+id/address"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    app:layout_constraintBottom_toBottomOf="@+id/divider"
                    android:text="@{vm.address}"
                    android:layout_width="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    tools:text="Central Park Restaurant"
                    app:layout_constraintEnd_toStartOf="@+id/btnHate"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>

            <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@+id/address"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:id="@+id/btnCall"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnLocation"/>

            <TextView
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:id="@+id/btnLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="Directions"
                    app:layout_constraintStart_toEndOf="@+id/btnCall"
                    app:layout_constraintEnd_toStartOf="@+id/btnLike"/>

            <TextView
                    android:id="@+id/btnLike"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:drawableLeft="@drawable/ic_thumb_up"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Like"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnLocation"
                    app:layout_constraintEnd_toStartOf="@+id/btnDislike"/>

            <TextView
                    android:id="@+id/btnDislike"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:drawableLeft="@drawable/ic_thumb_down"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Dislike"
                    app:layout_constraintStart_toEndOf="@+id/btnLike"/>

            <TextView
                    android:id="@+id/btnHate"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    tools:text="9.5"
                    android:text="@{vm.rating}"
                    android:textColor="@android:color/white"
                    app:bgColor="@{vm.ratingColor}"
                    android:gravity="center_vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/divider"
                    android:drawableLeft="@drawable/ic_favourite"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>